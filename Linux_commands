Linux_commands

-- OS and version 
cat /etc/os-release
or
hostnamectl

-- APACHE
-- Check Apache process
$ systemctl status httpd	  #RHEL
or
$ apachectl status          # yum install links		#RHEL

-- Check Apache logs
/var/log/httpd/error_log    #RHEL / Red Hat


-- AUTOSYS/CRON
-- Check Autosys jobs
ls -la /etc/cron.d


-- UNIX
-- Set profile shortcut/alias
Bash â€“ ~/.bashrc

$ alias               #to see list of defined alias

alias ll="ls -alF"    #add to profile

$ source ~/.bashrc    #enable in current session

-- sudo to root
sudo -s
sudo <command>
su root -c <command>



-- uname
uname -a

-- netstatus
netstat -antup

-- any root process
ps -aux | grep root

-- check disk space
df or df -ah -- overall 

-- search a text under current directory
grep -r '.' -e '<text>'
-e is the pattern used during the search
-r or -R is recursive








